<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dim_8"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginRight="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardCornerRadius="@dimen/dim_4"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dim_16"
        android:paddingTop="@dimen/dim_16"
        android:paddingBottom="@dimen/dim_16">


        <TextView
            android:id="@+id/current_reading_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/date"
            android:fontFamily="@font/lato"
            android:text="Current Reading"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/current_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_reading_tag"
            android:layout_toLeftOf="@+id/date"
            android:fontFamily="@font/lato"
            android:text="20 * 40"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_8"
            android:layout_marginRight="@dimen/dim_16"
            android:src="@drawable/icon_edit" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/current_reading"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/previous_reading_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_reading"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_16"
            android:layout_toLeftOf="@+id/view"
            android:fontFamily="@font/lato"
            android:text="Previous Reading"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/previous_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/previous_reading_tag"
            android:layout_marginRight="@dimen/dim_16"
            android:layout_toLeftOf="@+id/view"
            android:fontFamily="@font/lato"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/date"
            android:layout_width="@dimen/dim_110"
            android:layout_height="@dimen/dim_30"
            android:layout_below="@+id/current_reading"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@drawable/background_errow_color_primary"
            android:fontFamily="@font/lato"
            android:gravity="end|center_vertical"
            android:paddingLeft="@dimen/dim_8"
            android:paddingTop="@dimen/dim_2"
            android:paddingRight="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_2"
            android:text="18 Nov 2017"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
