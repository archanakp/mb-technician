<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dim_16"
        android:paddingTop="@dimen/dim_16"
        android:paddingBottom="@dimen/dim_16">

        <TextView
            android:id="@+id/date"
            android:layout_width="@dimen/dim_110"
            android:layout_height="@dimen/dim_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/background_errow_color_primary"
            android:fontFamily="@font/lato"
            android:gravity="end|center_vertical"
            android:paddingLeft="@dimen/dim_8"
            android:paddingTop="@dimen/dim_2"
            android:paddingRight="@dimen/dim_8"
            android:paddingBottom="@dimen/dim_2"
            android:text="18 Nov 2017"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/brand_name_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_8"
            android:layout_toLeftOf="@+id/date"
            android:fontFamily="@font/lato"
            android:text="Name of Brand"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_name_tag"
            android:layout_marginRight="@dimen/dim_8"
            android:layout_toLeftOf="@+id/date"
            android:fontFamily="@font/lato"
            android:text="Armor"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/brand_name"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/light_grey_2" />


        <TextView
            android:id="@+id/battery_model_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_name"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="Model of Brand"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/battery_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/battery_model_tag"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/battery_model"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_toLeftOf="@+id/img_battery"
            android:background="@color/light_grey_2" />

        <TextView
            android:id="@+id/size_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/battery_model"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="Size"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size_tag"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="12*12*123"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/size"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_toLeftOf="@+id/img_battery"
            android:background="@color/light_grey_2" />

        <ImageView
            android:id="@+id/img_battery"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_120"
            android:layout_below="@+id/brand_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dim_8"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_8"
            android:background="@drawable/border_rectangle_color_accent"
            android:padding="@dimen/dim_8" />

        <TextView
            android:id="@+id/quantity_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="Collected Quantity"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity_tag"
            android:layout_toLeftOf="@+id/img_battery"
            android:fontFamily="@font/lato"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
