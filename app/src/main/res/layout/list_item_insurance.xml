<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_16"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_8"
            android:layout_marginRight="@dimen/dim_16"
            android:src="@drawable/icon_edit" />

        <TextView
            android:id="@+id/insurance_id_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="Insurance ID"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/insurance_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insurance_id_tag"
            android:fontFamily="@font/lato"
            android:text="ID7842"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/insurance_id"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/light_grey_2" />

        <TextView
            android:id="@+id/insurance_date_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insurance_id"
            android:layout_marginTop="@dimen/dim_16"
            android:fontFamily="@font/lato"
            android:text="Insurance Date"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/insurance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insurance_date_tag"
            android:fontFamily="@font/lato"
            android:text="12 Dec 2019"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/insurance_date"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/light_grey_2" />

        <ImageView
            android:id="@+id/img_receipt"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_120"
            android:layout_below="@+id/insurance_date"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dim_8"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_8"
            android:background="@drawable/border_rectangle_color_accent"
            android:padding="@dimen/dim_8" />

        <TextView
            android:id="@+id/renew_date_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insurance_date"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="Renew Date"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/renew_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/renew_date_tag"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="12 Dec 2019"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/renew_date"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_toLeftOf="@+id/img_receipt"
            android:background="@color/light_grey_2" />

        <TextView
            android:id="@+id/receipt_id_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/renew_date"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="Receipt ID"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/receipt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receipt_id_tag"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="ID7832"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
