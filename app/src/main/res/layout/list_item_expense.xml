<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_16"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_8"
            android:layout_marginRight="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_receipt"
            android:src="@drawable/icon_edit" />

        <TextView
            android:id="@+id/amount_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_8"
            android:layout_toLeftOf="@+id/img_edit"
            android:fontFamily="@font/lato"
            android:text="Amount"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_tag"
            android:layout_marginRight="@dimen/dim_8"
            android:layout_toLeftOf="@+id/img_edit"
            android:fontFamily="@font/lato"
            android:text="120"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/amount"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/light_grey_2" />

        <TextView
            android:id="@+id/date_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_8"
            android:fontFamily="@font/lato"
            android:text="Date"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_tag"
            android:fontFamily="@font/lato"
            android:text="120"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/date"
            android:layout_marginTop="@dimen/dim_4"
            android:background="@color/light_grey_2" />

        <ImageView
            android:id="@+id/img_receipt"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_120"
            android:layout_below="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dim_8"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_8"
            android:layout_marginBottom="@dimen/dim_16"
            android:background="@drawable/border_rectangle_color_accent"
            android:padding="@dimen/dim_8" />

        <TextView
            android:id="@+id/purpose_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="Purpose"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purpose_tag"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="20 * 40"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/purpose"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_toLeftOf="@+id/img_receipt"
            android:background="@color/light_grey_2" />

        <TextView
            android:id="@+id/description_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purpose"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="Description"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_tag"
            android:layout_toLeftOf="@+id/img_receipt"
            android:fontFamily="@font/lato"
            android:text="20 * 40"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
